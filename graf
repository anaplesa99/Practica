#include <stdio.h>
#include <stdlib.h>

#define MAX 20
int n=1,conex=0,noduri[MAX],culori[MAX],matrice[MAX][MAX];
void afisare_noduri()
{
     int i;
     for(i=1;i<n;i++)
        printf("%d ",noduri[i]);
    printf("\n");
}
void inserare(int x)
{

    noduri[n]=x;
    n++;
    afisare_noduri();

}
void afisare_matrice()
{
    int i,j;
     for(i=1;i<n;i++)
     {
      for(j=1;j<n;j++)
        printf("%d ",matrice[i][j]);
       printf("\n");
     }
}
void inserare_arc(int a,int b)
{
    matrice[a][b]=matrice[b][a]=1;
    afisare_matrice();
}
void stergere_nod(int x)
{
   int i,j,nr=0;
   for(i=1;i<n;i++)
    if(x==noduri[i])
    {
      for(j=i;j<n;j++)
         noduri[j]=noduri[j+1];
     n--;
    }
    for(i=1;i<n;i++)
        matrice[i][x]=matrice[x][i]=0;
         afisare_noduri();
         afisare_matrice();
}
void stergere_arc(int a, int b)
{
    matrice[a][b]=matrice[b][a]=0;
    afisare_noduri();
    afisare_matrice();
}
int main()
{
  int opt,x,a,b;
  do
  {
      printf("\n\n0.Iesire\n");
      printf("1.Inserare nod\n");
      printf("2.Inserare arc\n");
      printf("3.Sterge un nod\n");
      printf("4.Sterge arc\n");
      printf("5.Afisare matrice\n");
      printf("Introduceti optiunea: ");
      scanf("%d",&opt);
      switch(opt)
      {
      case 1:
         printf("Dati nodul: ");
         scanf("%d",&x);
         inserare(x);
         break;
      case 2:
          printf("Dati arcele: ");
         scanf("%d",&a);
         scanf("%d",&b);
         inserare_arc(a,b);
        break;
      case 3:
         printf("Dati nodul: ");
         scanf("%d",&x);
         stergere_nod(x);
        break;
      case 4:
         printf("Dati arcele: ");
         scanf("%d",&a);
         scanf("%d",&b);
         stergere_arc(a,b);
        break;
      case 0:
        break;
      default:
        printf("Optiune invalida!\n");
        break;
      }
  }while(opt!=0);
  return 0;
}
